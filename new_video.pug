doctype html
html
  head
    title Share New Video
  body
    h1 Share New Video
    if error
      p(style="color:red")= error
    if success
      p(style="color:green")= success
    form(method="POST")
      input(type="text", name="title", placeholder="Video Title")
      input(type="text", name="url", placeholder="Video URL")
      button(type="submit") Add Video